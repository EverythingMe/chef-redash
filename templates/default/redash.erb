upstream rd_servers {
  server 127.0.0.1:<%= node['redash']['web']['port'] %>;
}

server {
  server_name <%= node['redash']['nginx']['server_name'] %>
  <% if node['redash']['nginx']['use_ssl'] %>
  listen   [::]:80;
  listen   443 default ssl;

  ssl_certificate <%= node['redash']['nginx']['ssl_certificate'] %>;
  ssl_certificate_key <%= node['redash']['nginx']['ssl_certificate_key'] %>;

  if ($ssl_protocol = "") {
    rewrite ^   https://$server_name$request_uri? permanent;
  }
  <% else %>
  listen   [::]:80 default;
  <% end %>

  access_log /var/log/nginx/rd.access.log;

  gzip on;
  gzip_types *;
  gzip_proxied any;

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass       http://rd_servers;
  }
}