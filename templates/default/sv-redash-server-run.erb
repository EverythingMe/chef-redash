#!/bin/sh
cd <%= ::File.join(node['redash']['path'], 'current') %>
exec 2>&1
. <%= ::File.join(node['redash']['path'], 'shared', 'env.sh') %>
exec chpst -u <%= node['redash']['user'] %> env <%= ::File.join(node['redash']['path'], 'virtualenv', 'bin', 'gunicorn') %> -b 127.0.0.1:<%= node['redash']['web']['port'] %> --name redash -w <%= node['redash']['web']['workers_count'] %> redash:app

